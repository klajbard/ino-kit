#include <TM1637Display.h>

// Instantiate display
TM1637Display display(9/*CLK*/, 8/*Data I/O*/);

void setup()
{
  display.setBrightness(0x00);  //set the diplay to maximum brightness
}

const uint8_t data[][4] = {
  { 0x01, 0x01, 0x00, 0x00 },
  { 0x00, 0x01, 0x01, 0x00 },
  { 0x00, 0x00, 0x01, 0x01 },
  { 0x00, 0x00, 0x00, 0x03 },
  { 0x00, 0x00, 0x00, 0x06 },
  { 0x00, 0x00, 0x00, 0x0c },
  { 0x00, 0x00, 0x08, 0x08 },
  { 0x00, 0x08, 0x08, 0x00 },
  { 0x08, 0x08, 0x00, 0x00 },
  { 0x18, 0x00, 0x00, 0x00 },
  { 0x30, 0x00, 0x00, 0x00 },
  { 0x21, 0x00, 0x00, 0x00 },
};

void loop()
{
  int dataLength = *(&data + 1) - data;
  while(1) {
    for(int i = 0; i < dataLength; i++) {
      display.setSegments(data[i]);
      delay(40);
      display.clear();
    }
  }
}
